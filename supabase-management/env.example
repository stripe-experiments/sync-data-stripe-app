# Supabase Token Sweeper Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Supabase Configuration
# =============================================================================
# Supabase project URL (e.g., https://xyzcompany.supabase.co)
SUPABASE_URL=

# Service role key
SUPABASE_SERVICE_ROLE_KEY=

# Anon key (public, used for JWT auth in pg_cron calls)
SUPABASE_ANON_KEY=

# Supabase project reference
SUPABASE_PROJECT_REF=

# =============================================================================
# Stripe Configuration
# =============================================================================
# Stripe secret keys for refreshing OAuth tokens
STRIPE_SECRET_KEY_TEST=sk_test_...
STRIPE_SECRET_KEY_LIVE=sk_live_...

# =============================================================================
# Encryption
# =============================================================================
# 32-byte AES-256 key as 64 hex characters
# Must match the ENCRYPTION_KEY used to encrypt tokens in the backend
ENCRYPTION_KEY=

# =============================================================================
# Token sweeper auth
# =============================================================================
# Shared secret required by the Edge Function.
# This MUST be sent as the `x-token-sweeper-secret` header by pg_cron/pg_net and any manual test calls.
TOKEN_SWEEPER_SECRET=